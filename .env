# ==================== Общие настройки ====================
NODE_ENV=production
TZ=Europe/Moscow

# ==================== PostgreSQL ====================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=potok
POSTGRES_USER=potok_user
POSTGRES_PASSWORD=potok_secure_password_CHANGE_ME

# ==================== Redis ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=potok_redis_password_CHANGE_ME

API_KEYS=gateway-service-secret-key-CHANGE_ME,state-service-secret-key-CHANGE_ME,task-service-secret-key-CHANGE_ME
# ==================== API Keys ====================
ADMIN_API_KEY=admin-service-super-secret-key-CHANGE_ME
STATE_API_KEY=state-service-secret-key-CHANGE_ME
TASK_API_KEY=task-service-secret-key-CHANGE_ME
GATEWAY_API_KEY=gateway-service-secret-key-CHANGE_ME

# ==================== JWT Secrets ====================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-CHANGE_ME
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-CHANGE_ME
JWT_REFRESH_EXPIRATION=7d

# ==================== MAX Bot Token ====================
MAX_BOT_TOKEN=token

# ==================== Service URLs (Internal) ====================
ADMIN_SERVICE_URL=http://admin-service:3000
STATE_SERVICE_URL=http://state-service:3002
TASK_SERVICE_URL=http://task-service:3003
ML_SERVICE_URL=http://ml-service:3004/api/v1
GATEWAY_SERVICE_URL=http://gateway-service:3001
ADMIN_API_KEY=gateway-service-secret-key-CHANGE_ME
# ==================== Service Ports (External) ====================
ADMIN_PORT=3000
GATEWAY_PORT=3001
STATE_PORT=3002
TASK_PORT=3003
ML_PORT=3004
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379

# ==================== Webhook URLs ====================
GATEWAY_WEBHOOK_URL=http://gateway-service:3001

# ==================== ML Service ====================
ML_MODEL_PATH=/app/app/data/models/task_extraction_model

# ==================== Logging ====================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==================== Circuit Breaker ====================
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT=60000

# ==================== Rate Limiting ====================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ==================== Monitoring ====================
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
